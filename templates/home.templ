templ RetentionGraph(config config.Config) {
	@templ.Raw(`
   days
   ` + strconv.Itoa(config.MaxAge) + `  |  \
       |   \
       |    \
       |     \
       |      \
       |       \
       |        ..
       |          \
   ` + strconv.Itoa((config.MinAge+config.MaxAge)/2) + `  | ----------..-------------------------------------------
       |             ..
       |               \
       |                ..
       |                  ...
       |                     ..
       |                       ...
       |                          ....
       |                              ......
    ` + strconv.Itoa(config.MinAge) + `  |                                    ....................
         0                      ` + fmt.Sprintf("%.1f", config.MaxSize/2) + `                      ` + fmt.Sprintf("%.1f", config.MaxSize) + `
                                                             MiB
    `)
}

